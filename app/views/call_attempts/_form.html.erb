<p><strong><%= outcome_label(@call_attempt.outcome) %></strong></p>

<%= simple_form_for(@form, url: @form.url, local: true, method: @form.method) do |f| %>
  <div class="inline-check-boxes special-legends soft-labels">
    <%= f.error_notification %>
    <% if @call_attempt.contacted? %>
      <hr>
      <%= f.input :name %>
      <hr>
      <%= f.input :gender, as: :radio_buttons, collection: CallAttempt::GENDERS.map { |gender| [gender_label(gender), gender] } %>
      <hr>
    <% end %>

    <%= render partial: '/boolean_radiobuttons', locals: { f: f, field: :return_visit, allow_nil: false } %>

    <hr>
    <%= f.input :notes, as: :text %>
    <hr>
    <%= f.input :reachable_by, as: :text %>
    <hr>

    <%= f.submit(class: 'btn btn-primary btn-block') %>
    <hr>
  </div>
<% end %>
